{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src/app",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@core/*": [
        "core/*"
      ],
      "@content/*": [
        "content/*"
      ],
      "@i18n/*": [
        "../i18n/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@env/*": [
        "../environments/*"
      ]
    }
  }
}