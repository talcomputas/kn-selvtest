{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@content/*": [
        "app/content/*"
      ],
      "@i18n/*": [
        "i18n/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@features/*": [
        "app/features/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
